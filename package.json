{
  "name": "bhvr",
  "version": "0.1.0",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter={client,server} dev",
    "dev:client": "bun run --filter 'client' dev",
    "dev:server": "bun run --filter 'server' dev",
    "dev:types": "bun run --filter 'shared' dev",
    "build:client": "bun run --filter 'client' build",
    "build:shared": "bun run --filter 'shared' build",
    "build": "bun run --filter '*' build",
    "postinstall": "bun --filter 'shared' build"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo"
  ],
  "devDependencies": {
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
